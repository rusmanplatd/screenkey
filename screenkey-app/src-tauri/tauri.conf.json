{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScreenKey",
  "version": "0.1.0",
  "identifier": "com.screenkey.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "app": {
    "windows": [
      {
        "title": "ScreenKey",
        "width": 350,
        "height": 500,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "center": false,
        "x": 50,
        "y": 50
      }
    ],
    "security": {
      "csp": null
    }
  }
}
