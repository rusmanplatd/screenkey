{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ScreenKey",
  "version": "0.0.7",
  "identifier": "com.screenkey.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ScreenKey",
    "category": "Utility",
    "shortDescription": "Display keyboard inputs on screen for tutorials and screencasts",
    "longDescription": "A modern, cross-platform screencast tool to display keyboard inputs on screen. Perfect for tutorials, demonstrations, and vim command visualization. Features include global keyboard capture, multiple layout modes, customizable themes, and always-on-top overlay.",
    "homepage": "https://github.com/rusmanplatd/screenkey",
    "license": "MIT"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "ScreenKey",
        "width": 350,
        "height": 500,
        "transparent": true,
        "decorations": false,
        "alwaysOnTop": true,
        "skipTaskbar": false,
        "visible": true,
        "center": false,
        "x": 50,
        "y": 50,
        "focus": false,
        "resizable": true,
        "maximizable": false,
        "minimizable": true,
        "closable": true,
        "fullscreen": false,
        "visibleOnAllWorkspaces": true
      }
    ],
    "security": {
      "csp": null
    }
  }
}
